<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    

    <Style x:Key="text-body-02" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>


    <Style x:Key="text-heading-03" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="LineHeight" Value="28"/>
    </Style>
    <Style x:Key="text-heading-07" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="54"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="LineHeight" Value="64"/>
    </Style>

</ResourceDictionary>